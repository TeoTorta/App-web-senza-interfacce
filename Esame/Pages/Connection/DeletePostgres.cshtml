@page
@model Esame.Pages.Connection.DeletePostgresModel
@{
}

<h1>Elimina</h1>

<h3>Sei sicuro di volere eliminare questa connessione?</h3>
<div>
    <h4>Connessione</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Input.Host)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Input.Host)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Input.Database)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Input.Database)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Input.UserId)
        </dt>
         <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Input.UserId)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Input.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Input.Password)
        </dd>
        
    </dl>
    <br />
    <form method="post">
        <input type="button" value="Go back" class="btn" style="border-color:black" onClick="history.go(-1);return true;" name="back">
