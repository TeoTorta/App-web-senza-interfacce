@page
@model Esame.Pages.NewConnectionModel
@{
}

<div style="margin-left:5%; margin-right:5%">
    <h1>Select the DB Provider</h1>
    <hr />

        <div class="row">
            <div class="col-md-4">
            <h3>
                <form method="post">
                    <div class="form-group">
                        <input type="radio" value="SQLite" asp-for="Input.provider" checked>
                        <label for="SQLite">SQLite</label>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="radio" value="PostgreSQL" asp-for="Input.provider">
                        <label for="PostgreSQL">PostgreSQL</label><br>
                    </div>
                        <br />
                    <div class="form-group">
                        <input type="submit" value="Confirm" class="btn btn-primary" />
                    </div>
                </form>
            </h3>
            </div>
        </div>
    
</div>


